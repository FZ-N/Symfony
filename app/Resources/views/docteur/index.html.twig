{% extends 'base.html.twig' %}

{% block body %}
    <h1>Docteurs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Specialite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for docteur in docteurs %}
            <tr>
                <td><a href="{{ path('docteur_show', { 'id': docteur.id }) }}">{{ docteur.id }}</a></td>
                <td>{{ docteur.nom }}</td>
                <td>{{ docteur.prenom }}</td>
                <td>{{ docteur.specialite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('docteur_show', { 'id': docteur.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('docteur_edit', { 'id': docteur.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('docteur_new') }}">Create a new docteur</a>
        </li>
    </ul>
{% endblock %}
