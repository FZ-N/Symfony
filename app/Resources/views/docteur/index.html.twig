{% extends 'ConsultationBundle:Default:base.html.twig' %}


{% block body %}
    <h1>La liste des Docteurs</h1>
<br>
    <a href="{{ path('docteur_new') }}" class="btn btn-primary">Ajouter un docteur</a>
    <br><br><br>
    <table class="table table-hover">
        <thead>
            <tr>
               
                <th>Nom</th>
                <th>Prenom</th>
                <th>Specialite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for docteur in docteurs %}
            <tr>
                
                <td>{{ docteur.nom }}</td>
                <td>{{ docteur.prenom }}</td>
                <td>{{ docteur.specialite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('docteur_show', { 'id': docteur.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('docteur_edit', { 'id': docteur.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
