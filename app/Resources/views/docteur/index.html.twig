{% extends 'ConsultationBundle:Default:base.html.twig' %}


{% block body %}
    <h1>Docteurs list</h1>
<br>
    <button  class="btn btn-info"><a href="{{ path('docteur_new') }}">Ajouter un docteur</a></button>
    <br><br><br>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Specialite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for docteur in docteurs %}
            <tr>
                <td><a href="{{ path('docteur_show', { 'id': docteur.id }) }}">{{ docteur.id }}</a></td>
                <td>{{ docteur.nom }}</td>
                <td>{{ docteur.prenom }}</td>
                <td>{{ docteur.specialite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('docteur_show', { 'id': docteur.id }) }}">Afficher</a>
                        </li>
                        <li>
                            <a href="{{ path('docteur_edit', { 'id': docteur.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
