{% extends 'ConsultationBundle:Default:base.html.twig' %}

{% block body %}
    <h1>Les utilisateurs</h1>
    <br>
    <div class="row">
        <a href="http://localhost/symfony-master/web/app_dev.php/user/createuser" class="btn btn-primary">Cr√©er un utilisateur</a>
    </div>
    <br><br><br>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="row">ID</th>
            <th scope="row">Username</th>
            <th scope="row">Email</th>
            <th scope="row">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td> <a>{{ user.id }}</a></td>
                <td><a>{{ user.username }}</a></td>
                <td><a>{{ user.email }}</a></td>
                <td>
                    <a href="{{ absolute_url(asset('')) }}app_dev.php/user/updateuser/{{ user.id }}" class="btn btn-success">Edit</a>
                    <a href="{{ absolute_url(asset('')) }}app_dev.php/user/deleteuser/{{ user.id }}" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
