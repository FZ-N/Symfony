{% extends 'ConsultationBundle:Default:base.html.twig' %}
{% block body %}
<div  class ="container">

    <form class="form-signin" action="{{ path('login') }}" method="post">
        <center><h1 class="h3 mb-3 font-weight-normal">Espace d'authentification</h1></center>
        <br>
        <label for="_username" class="sr-only">Nom d'utilisateur</label>
        <input type="text"
               id="_username"
               name="_username"
               class="form-control"
               placeholder="nom d'utilisateur"
               required
               autofocus>

        <label for="_password" class="sr-only">Mot de passe</label>
        <br>
        <input type="password"
               id="_password"
               name="_password"
               class="form-control"
               placeholder="mot de passe"
               required>
        <br>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Se connecter</button>
       <center> <p class="mt-5 mb-3 text-muted">&copy; 2019-2020</p> </center>
    </form>

</div>
{% endblock %}